{% extends 'base.html.twig' %}

{% block title %}Задача Symfony{% endblock %}

{% block body %}
{{include('global/navbar.html.twig')}}

<div class="container">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title text-center">Записи пользователей</h4> 
                        
            <div style="padding-top:15px" class="container" id="users_table">                             
            </div>           
        </div>
    </div>
</div>

<!-- Modal Admin-->
<div class="modal fade" id="new_admin_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Добавить нового администратора</h5>
        <button type="button" class="btn-primary" data-dismiss="modal" aria-label="Close" onclick="close_new_admin()">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <label class="col-form-label col-form-label-lg mt-2" for="inputLarge">Логин</label>
    <input class="form-control" type="text" id="admin_login">
    <label class="col-form-label col-form-label-lg mt-2" for="inputLarge">Сохранить</label>
    <input class="form-control" type="password" id="admin_password">
    
    <div style="padding-top:15px" class="container">
        <div class="col text-center">
            <button  class="btn btn-success float-center" type="button" onclick="add_admin()">Войти</button>
        </div>             
    </div> 
    </div>
  </div>
</div>

<!-- Modal Preview-->
<div class="modal fade" id="preview_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Просмотра данных</h5>
        <button type="button" class="btn-primary" data-dismiss="modal" aria-label="Close" onclick="close_preview()">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" >
        <div class = "row">
            <h3>Сообщение:</h3>
            <p id="user_message"></p>
        </div>
        <div class = "row">
            <h3>Электронная почта:</h3>
            <p id="user_email"></p>
        </div>
        <div class = "row">
            <h3>Цвет:</h3>
            <div class= "container" id="user_color"></div>
        </div>
        <div class = "row">
            <h3>Фигура:</h3>
            <p id="user_shape"></p>
        </div>
        <div class="container" id="user_images">
        
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
{% block scripts %}
<script src="http://localhost/zadacha_symfony/src/JS/Admin.js?0.4"></script>
{% endblock %}